{
  "name": "Beatrix Bun DevContainer",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "settings": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
  "extensions": [
    "esbenp.prettier-vscode",
    "dbaeumer.vscode-eslint",
    "ms-vscode.vscode-typescript-next",
    "ms-azuretools.vscode-docker"
  ],
  "postCreateCommand": "bun install",
  "mounts": [
    "source=${localWorkspaceFolder}/.env,target=/workspace/.env,type=bind,consistency=cached,optional",
    "source=${localWorkspaceFolder}/.env.example,target=/workspace/.env.example,type=bind,consistency=cached,optional"
  ],
  "forwardPorts": [8080],
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  }
}
