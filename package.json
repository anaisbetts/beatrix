{
  "name": "ha-agentic-automation",
  "version": "0.1.0",
  "module": "./src/index.ts",
  "type": "module",
  "scripts": {
    "lint": "eslint && tsc && prettier --check .",
    "fix": "eslint --fix && prettier --write .",
    "build:all": "bun run build:vite && bun run build:server",
    "build:server": "bun build --target bun --compile --outfile ./dist/server ./server/index.ts",
    "build:vite": "vite build",
    "build:ci": "bun run lint && bun run build:all",
    "dev": "concurrently \"bun dev:server\" \"bun dev:vite\"",
    "dev:debug": "DEBUG='*' concurrently \"bun dev:server\" \"bun dev:vite\"",
    "dev:server": "bun run ./server/index.ts",
    "dev:vite": "vite",
    "start": "bun run ./server/index.ts",
    "start:debug": "DEBUG='*' bun run ./server/index.ts",
    "serve": "bun run ./server/index.ts serve",
    "mcp": "bun run ./server/index.ts mcp",
    "evals": "bun run ./server/index.ts evals"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@tailwindcss/vite": "^4.0.16",
    "@types/bun": "^1.2.5",
    "@types/debug": "^4.1.12",
    "@types/mime-types": "^2.1.4",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "@vitejs/plugin-react": "^4.3.4",
    "bun-types": "latest",
    "concurrently": "^9.1.2",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "vite": "^6.2.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@anaisbetts/commands": "0.3.1",
    "@anthropic-ai/sdk": "^0.39.0",
    "@modelcontextprotocol/sdk": "^1.7.0",
    "@radix-ui/react-collapsible": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.1.8",
    "autoprefixer": "^10.4.21",
    "axios": "^1.8.4",
    "bun-plugin-tailwind": "^0.0.15",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "commander": "^13.1.0",
    "debug": "^4.4.0",
    "dotenv": "^16.4.7",
    "home-assistant-js-websocket": "^9.4.0",
    "kysely": "^0.27.6",
    "kysely-bun-worker": "^1.1.0",
    "lru-cache": "^11.0.2",
    "lucide-react": "^0.483.0",
    "ollama": "^0.5.14",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-remark": "^2.1.0",
    "rxjs": "^7.8.2",
    "serve-static-bun": "^0.5.3",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.14",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.2.4",
    "zod": "^3.24.2"
  }
}
